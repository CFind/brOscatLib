FUNCTION DT2_TO_SDT
    (*http://www.oscat.de/images/OSCATBasic/oscat_basic333_en.pdf#page=121*)
    RETVAL.YEAR := YEAR_OF_DATE(DI);
    RETVAL.MONTH := MONTH_OF_DATE(DI);
    RETVAL.DAY := DAY_OF_MONTH(DI);
    RETVAL.WEEKDAY := DAY_OF_WEEK(DI);
    RETVAL.MS := DWORD_TO_INT(TOD_TO_DWORD(TI) MOD 1000);
    RETVAL.SECOND := DWORD_TO_INT((TOD_TO_DWORD(TI) / 1000) MOD 60);
    RETVAL.MINUTE := DWORD_TO_INT((TOD_TO_DWORD(TI) / 60000) MOD 60);
    RETVAL.HOUR := DWORD_TO_INT(TOD_TO_DWORD(TI) / 3600000);
    DT2_TO_SDT:=TRUE;
